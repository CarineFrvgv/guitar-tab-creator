{
  "compilerOptions": {
    "target": "ES2017",                
    "module": "CommonJS",               
    "rootDir": "./", 
    "outDir": "./dist",     
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
  }
}
