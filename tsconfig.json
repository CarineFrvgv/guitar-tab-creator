{
  "compilerOptions": {
    "target": "ESNext",                
    "module": "commonjs",               
    "rootDir": "./", 
    "outDir": "dist",     
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
  }
}
